<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!--Q ঔ BENGALI LETTER AU-->
            <Key
                latin:keyLabel="&#x0994;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--W ঐ BENGALI LETTER AI-->
            <Key
                latin:keyLabel="&#x0990;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--E আ BENGALI LETTER AA-->
            <Key
                latin:keyLabel="&#x0986;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--R ঈ BENGALI LETTER II-->
            <Key
                latin:keyLabel="&#x0988;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--T ঊ BENGALI LETTER UU-->
            <Key
                latin:keyLabel="&#x098A;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--Y ভ BENGALI LETTER BHA-->
            <Key
                latin:keyLabel="&#x09AD;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--U ঙ BENGALI LETTER NGA-->
            <Key
                latin:keyLabel="&#x0999;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--I ঘ BENGALI LETTER GHA-->
            <Key
                latin:keyLabel="&#x0998;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--O ধ BENGALI LETTER DHA-->
            <Key
                latin:keyLabel="&#x09A7;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--P ঝ BENGALI LETTER JHA-->
            <Key
                latin:keyLabel="&#x099D;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\{ ঢ BENGALI LETTER DDHA-->
            <Key
                latin:keyLabel="&#x09A2;"
                latin:moreKeys="{"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\} ঞ BENGALI LETTER NYA-->
            <Key
                latin:keyLabel="&#x099E;"
                latin:moreKeys="}"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <Key
                latin:keyLabel="|"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
        </case>

        <default>
            <!--q ৌ BENGALI VOWEL SIGN AU-->
            <Key
                latin:keyLabel="&#x09CC;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--w ৈ BENGALI VOWEL SIGN AI-->
            <Key
                latin:keyLabel="&#x09C8;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--e া BENGALI VOWEL SIGN AA-->
            <Key
                latin:keyLabel="&#x09BE;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--r ী BENGALI VOWEL SIGN II-->
            <Key
                latin:keyLabel="&#x09C0;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--t ূ BENGALI VOWEL SIGN UU-->
            <Key
                latin:keyLabel="&#x09C2;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--y ব BENGALI LETTER BA-->
            <Key
                latin:keyLabel="&#x09AC;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--u হ BENGALI LETTER HA-->
            <Key
                latin:keyLabel="&#x09B9;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--i গ BENGALI LETTER GA-->
            <Key
                latin:keyLabel="&#x0997;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--o দ BENGALI LETTER DA-->
            <Key
                latin:keyLabel="&#x09A6;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--p জ BENGALI LETTER JA-->
            <Key
                latin:keyLabel="&#x099C;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\[ ড BENGALI LETTER DDA-->
            <Key
                latin:keyLabel="&#x09A1;"
                latin:moreKeys="["
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\] ় BENGALI SIGN NUKTA-->
            <Key
                latin:keyLabel="&#x09BC;"
                latin:moreKeys="]"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <Key
                latin:keyLabel="\\"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
         </default>
    </switch>
</merge>
